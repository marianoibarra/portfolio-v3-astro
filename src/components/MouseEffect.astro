<script>
  const element = document.getElementById('mouse-effect')
  const updateMousePosition = ({clientX: x, clientY: y}: {clientX: number, clientY: number}) => {
    if(element) {
      if(window.matchMedia('(min-width: 768px)').matches) {
        element.style.background = `radial-gradient(600px at ${x}px ${y}px, rgba(96, 101, 109, 0.15), transparent 80%)`;
      } else {
        element.style.background = `radial-gradient(600px at 0px 0px, rgba(96, 101, 109, 0.15), transparent 80%)`;
      }
    }
  };
  window.addEventListener("mousemove", updateMousePosition);
</script>

<div id="mouse-effect" />

<style>
  #mouse-effect {
    position: fixed;
    left: 0;
    top: 0;
    width: 100vw;
    height: 100vh;
    pointer-events: none;
    z-index: 30;
    background: radial-gradient(600px at 0px 0px, rgba(96, 101, 109, 0.15), transparent 80%);
  }
</style>